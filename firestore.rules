rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Aplica a regra para todos os documentos
    match /{document=**} {
      // Qualquer pessoa pode ler (visualizar os cartões)
      allow read: if true;
      
      // Apenas usuários autenticados podem escrever (criar/editar)
      allow write: if request.auth != null;
    }
  }
}