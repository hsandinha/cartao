rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Permite que usuários autenticados escrevam apenas seus próprios perfis
    // Mas permite que qualquer pessoa (logada ou não) leia os perfis para visualizar cartões públicos
    match /profiles/{userId} {
      allow read: if true; // Qualquer pessoa pode ler (para cartões públicos)
      allow write: if request.auth != null && request.auth.uid == userId; // Apenas o dono pode editar
    }
    
    // Permite teste de conexão (opcional - remover em produção)
    match /test/{document} {
      allow read, write: if request.auth != null;
    }
  }
}